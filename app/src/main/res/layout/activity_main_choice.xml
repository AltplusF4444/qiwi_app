<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.qiwi.MainActivityChoice">

    <Button
        android:id="@+id/button3"
        android:layout_width="340dp"
        android:layout_height="125dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="99dp"
        android:text="@string/Продать"
        android:textSize="48sp"
        app:layout_constraintBottom_toTopOf="@+id/button4"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck,UsingOnClickInXml"
        android:clickable="true"
        android:onClick="toastSeller"
        android:focusable="true" />

    <Button
        android:id="@+id/button4"
        android:layout_width="340dp"
        android:layout_height="125dp"
        android:layout_marginStart="35dp"
        android:layout_marginEnd="36dp"
        android:layout_marginBottom="172dp"
        android:text="@string/Купить"
        android:textSize="48sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:ignore="TextContrastCheck,UsingOnClickInXml"
        android:clickable="true"
        android:onClick="toastBuyer"
        android:focusable="true" />
</androidx.constraintlayout.widget.ConstraintLayout>